{
  "name": "typescript-action",
  "packageManager": "npm@8.11.0",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prettier": "prettier --write --ignore-path .gitignore './**/*.ts'",
    "prettier-check": "prettier --check --ignore-path .gitignore './**/*.ts'",
    "format": "npm run lint:fix && npm run prettier",
    "package": "ncc build --source-map --license licenses.txt",
    "jest": "jest",
    "test": "npm-run-all -p lint prettier-check jest",
    "ci": "npm-run-all -s build test",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}

{
  "name": "actions-cache-s4",
  "packageManager": "npm@8.11.0",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt -o dist src/main.ts",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/main.ts",
    "start": "npm dev",
    "lint": "eslint --cache src/**/*.ts",
    "lint:fix": "eslint --cache --fix src/**/*.ts",
    "prettier": "prettier --write --ignore-path .gitignore './**/*.ts'",
    "prettier-check": "prettier --check --ignore-path .gitignore './**/*.ts'",
    "format": "npm run lint:fix && npm run prettier",
    "jest": "jest",
    "test": "npm-run-all -p lint prettier-check jest",
    "all": "npm-run-all -s build format package test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyberAgent-Infosys/actions-cache-s4.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "CA Advance",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/parser": "^5.47.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.30.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.1.7",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.4"
  }
}
